#loader
    position: fixed
    top: 0px
    bottom: 0px
    left: 0px
    right: 0px
    width: 100%
    height: 100%
    z-index: 1500
    display: flex

    .loader__wrapper
        flex: 1
        display: flex
        flex-direction: column
        align-items: center
        justify-content: center
        pointer-events: none
        background-color: rgba(0,0,0,0.5)

        &:after
            content: "Loading..."
            position: fixed
            top: 0px
            left: 0px
            bottom: 0px
            right: 0px
            margin: auto
            font-size: 30px
            // font-weight: bold
            color: rgb(210, 210, 210)
            text-align: center
            line-height: 100vh

    .loader__content
        border: 16px solid $theme-colors[primary]
        border-radius: 50%
        border-top: 16px solid $theme-colors[secondary]
        width: 20vw
        height: 20vw
        animation: spin 2s linear infinite

    @keyframes spin {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }