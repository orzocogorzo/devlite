#home
    color: $font-colors["secondary"]
    justify-content: center
    align-items: center

    .home__section
        min-height: calc(100vh - 60px)
        background-size: cover
        background-position: center
        background-repeat: no-repeat
        flex: 1
        width: 100%

        > img
            position: absolute
            z-index: -1
            width: 100%
            height: 100%
            object-fit: cover
        img#section1
            background-image: url(../../assets/images/section1-lazy.jpg)
            filter: blur(5px)

            &.visible
                background-image: url(../../assets/images/section1.jpg)
                filter: blur(0px)

        img#section2
            background-image: url(../../assets/images/section2-lazy.jpg)
            filter: blur(5px)

            &.visible
                background-image: url(../../assets/images/section2.jpg)
                filter: blur(0px)

        img#section3
            background-image: url(../../assets/images/section3-lazy.jpg)
            filter: blur(5px)

            &.visible
                background-image: url(../../assets/images/section3.jpg)
                filter: blur(0px)