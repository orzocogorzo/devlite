#scrollBar
  display block
  z-index 500
  position absolute

  &.fits
    display none

  &[orientation="horizontal"]
    width 100%
    height 10px
    left 0px
    bottom 0px

    .scroll-bar__body
      height 10px
      width 100%

  &[orientation="vertical"]
    height 100%
    width 10px
    right 0px
    top 0px

    .scroll-bar__wrapper
      display flex

    .scroll-bar__body
      width 10px
      height 100%

  .scroll-bar__wrapper
    position relative
    width 100%
    height 100%

  .scroll-bar__body
    background-color #000000
    opacity 0.5
    border-radius 5px
  
  .scroll-bar__slider
    height 10px
    background-color white
    border-radius 5px
    cursor pointer