html
    box-sizing: border-box
    height: 100%
    m-font-size($base-font-size)
    -webkit-print-color-adjust: exact

    +m-breakpoint(sm md)
        m-font-size($base-font-size - 2)

    +m-breakpoint(xlg)
        m-font-size($base-font-size + 1)

*,
*:before,
*:after
    box-sizing: inherit

body
    color: $font-colors[primary]
    font-family: $base-font-family
    m-font-size($base-font-size)
    height: 100%
    margin: 0
    min-height: 600px
    padding: 0
    text-rendering: geometricPrecision

    // +m-breakpoint(xlg)
    //   font-size: 1.1rem


    +m-breakpoint(landscape)
        min-height: 100%
        // overflow: hidden

    &.st-james-infermary
        background-color: $theme-colors[st-james-primary]
        color: $font-colors[st-james-primary]

ul,
li
    list-style-type: none
    margin: 0
    padding: 0

abbr.tip
  opacity: 0
  display: block
  width: 100%
  height: 100%
  cursor: pointer

img
    border: none
    max-width: 100%

h1,
h2,
h3,
h4,
h5,
p
    margin: 0

a
    color: $font-colors[highlight]

div.flex
    display: flex
    flex: 1
    flex-direction: row

    &.col
        flex-direction: column

$header-height = 60px